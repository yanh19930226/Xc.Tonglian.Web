
@model Xc.Tonglian.Web.Models.Dto.Account.AccountEditDto
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <form class="form-horizontal" data-ajax="true" data-ajax-complete="completed" asp-action="DoEdit" id="newform" asp-controller="Account" data-ajax-method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="col-lg-3 control-label">客户号</label>
                    <div class="col-lg-8">
                        <input asp-for="CusId" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="CusId" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">账户号</label>
                    <div class="col-lg-8">
                        <input asp-for="AccountNo" class="bg-focus form-control parsley-validated" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">账户币种</label>
                    <div class="col-lg-8">
                        <input asp-for="Currency" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Currency" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">账户名</label>
                    <div class="col-lg-8">
                        <input asp-for="AccountName" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="AccountName" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">账户类型</label>
                    <div class="col-lg-8">
                        <select asp-for="Nature" class="bg-focus form-control parsley-validated">
                            <option value="1">对公</option>
                            <option value="0">对私</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">账户地区</label>
                    <div class="col-lg-8">
                        <input asp-for="Country" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Country" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">账户省份</label>
                    <div class="col-lg-8">
                        <input asp-for="Province" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Province" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">账户城市</label>
                    <div class="col-lg-8">
                        <input asp-for="City" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="City" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">卡折类型</label>
                    <div class="col-lg-8">
                        <select asp-for="CardorBook" class="bg-focus form-control parsley-validated">
                            <option value="00">借记卡</option>
                            <option value="01">存折</option>
                            <option value="02">信用卡</option>
                            <option value="03">准贷记卡</option>
                            <option value="04">预消费卡</option>
                            <option value="05">境外卡</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">当地行号</label>
                    <div class="col-lg-8">
                        <input asp-for="BicCode" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="BicCode" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">地址</label>
                    <div class="col-lg-8">
                        <input asp-for="Addr" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Addr" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">

                    <div class="col-lg-9 col-offset-3">

                        <button type="submit" class="btn btn-primary">保存</button>
                        <a type="submit" href="/SysShopAndAdvertisement" class="btn btn-default">返回</a>
                    </div>

                </div>
            </form>
        </section>
    </div>
</div>
<script>
    completed = function (xhr) {
        var rv = JSON.parse(xhr.responseText);
        if (rv.isSuccess) {
            console.log(xhr);
            $.tipsOk(rv.message);
            window.location = window.location;
        } else {
            $.tipsError(rv.message);
        }
    };

    $(function () {
        $("#ScrapTime").each(function (p, obj) { $(obj).datepicker(); });
    })
</script>

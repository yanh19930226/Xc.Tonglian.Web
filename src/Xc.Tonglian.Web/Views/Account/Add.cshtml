
@model Tonglian.Sdk.Models.Accounts.AccountCreateRequest
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <script>
                completed = function (xhr) {
                    debugger;
                    if (xhr.responseText == "true") {
                        $.tipsOk("操作成功！");
                        setTimeout(function () {
                            window.location = window.location;
                        }, 1500);
                    } else {
                        $.tipsError("修改失败");
                    }
                };
            </script>
            <form class="form-horizontal" data-ajax="true" data-ajax-complete="completed" asp-action="DoAdd" id="newform" asp-controller="SysShopAndAdvertisement" data-ajax-method="post">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">cusid</label>
                        <div class="col-lg-8">
                            <input asp-for="cusid" class="bg-focus form-control parsley-validated" />
                            <span asp-validation-for="cusid" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">accountNo</label>
                        <div class="col-lg-8">
                            <input asp-for="accountNo" class="bg-focus form-control parsley-validated" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">currency</label>
                        <div class="col-lg-8">
                            <input asp-for="currency" class="bg-focus form-control parsley-validated" />
                            <span asp-validation-for="currency" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">accountName</label>
                        <div class="col-lg-8">
                            <input asp-for="accountName" class="bg-focus form-control parsley-validated" />
                            <span asp-validation-for="accountName" class="text-danger"> </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">nature</label>
                        <div class="col-lg-8">
                            <input asp-for="nature" class="bg-focus form-control parsley-validated" />
                            <span asp-validation-for="nature" class="text-danger"> </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">country</label>
                        <div class="col-lg-8">
                            <input asp-for="country" class="bg-focus form-control parsley-validated" />
                            <span asp-validation-for="country" class="text-danger"> </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">province</label>
                        <div class="col-lg-8">
                            <input asp-for="province" class="bg-focus form-control parsley-validated" />
                            <span asp-validation-for="province" class="text-danger"> </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">city</label>
                        <div class="col-lg-8">
                            <input asp-for="city" class="bg-focus form-control parsley-validated" />
                            <span asp-validation-for="city" class="text-danger"> </span>
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-lg-9 col-offset-3">

                            <button type="submit" class="btn btn-primary">保存</button>
                            <a type="submit" href="/SysShopAndAdvertisement" class="btn btn-default">返回</a>
                        </div>

                    </div>
                </form>
        </section>
    </div>
</div>
<script>
    $(function () {
        $("#ScrapTime").each(function (p, obj) { $(obj).datepicker(); });
    })
</script>

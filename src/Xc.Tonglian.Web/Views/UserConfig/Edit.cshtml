
@model Xc.Tonglian.Web.Models.Dto.UserConfig.UserConfigEditDto
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <form class="form-horizontal" data-ajax="true" data-ajax-complete="completed" asp-action="DoEdit" id="newform" asp-controller="UserConfig" data-ajax-method="post">
                <div class="form-group">
                    <label class="col-lg-3 control-label">客户号</label>
                    <div class="col-lg-8">
                        <input asp-for="Authcus" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Authcus" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">商户号</label>
                    <div class="col-lg-8">
                        <input asp-for="MerId" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="MerId" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">通联SecretKey</label>
                    <div class="col-lg-8">
                        <input asp-for="SecretKey" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="SecretKey" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">公钥</label>
                    <div class="col-lg-8">
                        <input asp-for="PublicKey" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="PublicKey" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">私钥</label>
                    <div class="col-lg-8">
                        <input asp-for="PrivateKey" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="PrivateKey" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-9 col-offset-3">
                        <button type="submit" class="btn btn-primary">保存</button>
                        <a type="submit" href="/UserConfig" class="btn btn-default">返回</a>
                    </div>

                </div>
            </form>
        </section>
    </div>
</div>
<script>
    completed = function (xhr) {
        var rv = JSON.parse(xhr.responseText);
        if (rv.isSuccess) {
            console.log(xhr);
            $.tipsOk(rv.message);
            window.location = window.location;
        } else {
            $.tipsError(rv.message);
        }
    };
</script>

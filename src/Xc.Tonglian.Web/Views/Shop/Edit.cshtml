
@model Xc.Tonglian.Web.Models.Dto.Shop.ShopEditDto
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <form class="form-horizontal" data-ajax="true" data-ajax-complete="completed" asp-action="DoEdit" id="newform" asp-controller="Shop" data-ajax-method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label class="col-lg-3 control-label">跟踪号</label>
                    <div class="col-lg-8">
                        <input asp-for="StId" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="StId" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">所属平台</label>
                    <div class="col-lg-8">
                        <input asp-for="Platform" class="bg-focus form-control parsley-validated" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">收入款币种</label>
                    <div class="col-lg-8">
                        <input asp-for="Currency" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Currency" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">有无店铺</label>
                    <div class="col-lg-8">
                        <input asp-for="Exists" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Exists" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">月交易量</label>
                    <div class="col-lg-8">
                        <input asp-for="Monthamt" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Monthamt" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">卖家编号</label>
                    <div class="col-lg-8">
                        <input asp-for="SellerId" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="SellerId" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">店铺所有者名称</label>
                    <div class="col-lg-8">
                        <input asp-for="Owner" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Owner" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">店铺名称</label>
                    <div class="col-lg-8">
                        <input asp-for="StoreName" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="StoreName" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">店铺/站点链接</label>
                    <div class="col-lg-8">
                        <input asp-for="Weburl" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Weburl" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">销售类目</label>
                    <div class="col-lg-8">
                        <input asp-for="Categroy" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Categroy" class="text-danger"> </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">运营时间</label>
                    <div class="col-lg-8">
                        <input asp-for="Runtime" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="Runtime" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">授权令牌</label>
                    <div class="col-lg-8">
                        <input asp-for="AuthToken" class="bg-focus form-control parsley-validated" />
                        <span asp-validation-for="AuthToken" class="text-danger"> </span>
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-lg-9 col-offset-3">

                        <button type="submit" class="btn btn-primary">保存</button>
                        <a type="submit" href="/Shop" class="btn btn-default">返回</a>
                    </div>

                </div>
            </form>
        </section>
    </div>
</div>
<script>

    completed = function (xhr) {
        var rv = JSON.parse(xhr.responseText);
        if (rv.isSuccess) {
            console.log(xhr);
            $.tipsOk(rv.message);
            window.location = window.location;
        } else {
            $.tipsError(rv.message);
        }
    };


    $(function () {
        $("#ScrapTime").each(function (p, obj) { $(obj).datepicker(); });
    })
</script>
